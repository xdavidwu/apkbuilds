# Maintainer: xdavidwu <xdavidwuph@gmail.com>
pkgname=font-cns11643-kai
pkgver=0_git20250325
pkgrel=1
pkgdesc="Kai font from CNS11643 Chinese Standard Exchange Code Full Character Library"
url="https://data.gov.tw/dataset/5961"
arch="noarch"
license="OFL-1.1"
source="https://www.cns11643.gov.tw/opendata/Fonts_Kai.zip"
options="!check"
builddir="$srcdir"

package() {
	for font in TW-Kai-98_1.ttf \
		TW-Kai-Plus-98_1.ttf \
		TW-Kai-Ext-B-98_1.ttf
	do
		install -Dm644 "$font" -t "$pkgdir"/usr/share/fonts/cns11643/
	done
}

sha512sums="
b00dac504a5333ae2f362dec510cf96ca8126085a00417f86305fa593fd1b38c5d6b1cda57ff7e9bbe20abf54da742532251daf94ae36a22285c659e902006a9  Fonts_Kai.zip
"
